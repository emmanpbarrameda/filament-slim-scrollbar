{
    "name": "aymanalhattami/filament-slim-scrollbar",
    "description": "Slim scrollbar for sidebar scrollbar, table scrollbar, and any other scrollbar in the application.",
    "keywords": [
        "aymanalhattami",
        "filament-slim-scrollbar",
        "filament",
        "css slim scrollbar",
        "pure css scrollbar"
    ],
    "homepage": "https://github.com/aymanalhattami/filament-slim-scrollbar",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ayman Alhattami",
            "email": "ayman.m.alhattami@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
        "filament/filament": "^3.0 || ^4.0 || ^5.0",
        "spatie/laravel-package-tools": "^1.15 || ^1.16 || ^1.17 || ^1.18"
    },
    "autoload": {
        "psr-4": {
            "Aymanalhattami\\FilamentSlimScrollbar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aymanalhattami\\FilamentSlimScrollbar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aymanalhattami\\FilamentSlimScrollbar\\FilamentSlimScrollbarServiceProvider"
            ],
            "aliases": {
                "FilamentSlimScrollbar": "Aymanalhattami\\FilamentSlimScrollbar\\FilamentSlimScrollbarFacade"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
        "phpunit/phpunit": "^10.5 || ^11.0 || ^12.0 || ^13.0",
        "phpstan/phpstan": "^1.0",
        "laravel/pint": "^1.0"
    }
}
